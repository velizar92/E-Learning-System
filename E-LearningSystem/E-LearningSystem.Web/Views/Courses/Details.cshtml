@using E_LearningSystem.Services.Services.Courses.Models
@model CourseDetailsServiceModel

    <h1>@Model.Name</h1>
    <img src="~/@Model.ImageUrl" width="100%" height="500">
    <p>@Model.Name</p>
    <p>@Model.Description</p>
     <a asp-controller="Courses" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Course</a>


<a asp-controller="Lecture" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">Add Lecture</a>
<p></p>
    <ol class="list-group list-group-numbered col-md-12">

        @foreach (var lecture in Model.Lectures)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">@lecture.Name</div>
                    @lecture.Description
                </div>
                
                 <a asp-controller="Lectures" asp-action="Details" asp-route-id="@lecture.Id" class="btn btn-primary">View More</a>
            </li>
        }
    </ol>
