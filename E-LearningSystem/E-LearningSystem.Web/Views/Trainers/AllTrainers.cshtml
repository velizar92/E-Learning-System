@model IEnumerable<AllTrainersServiceModel>

   
<main id="main" data-aos="fade-in">

    <div class="breadcrumbs">
        <div class="container">
            <h2>Our Trainers</h2>
            <p>Here you can vote for your favorite trainer! </p>
        </div>
    </div>

    <section id="trainers" class="trainers">
        <div class="container" data-aos="fade-up">
            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                @foreach (var trainer in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="member">
                            <img src="~/assets/img/users/@trainer.ProfileImageUrl" class="img-fluid" alt="Trainer Profile Image" width="300" height="300">
                            <div class="member-content">
                                <h4>@trainer.FullName</h4>
                                @if (User.IsInRole(LearnerRole))
                                {
                                    <a asp-area="" asp-controller="Trainers" asp-action="Vote" asp-route-id="@trainer.Id" class="btn btn-primary">Vote <i class="fas fa-thumbs-up"></i></a>
                                    <div>
                                        <i class="fas fa-thumbs-up"></i> @(trainer.Rating == null ? 0 : trainer.Rating)
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</main>
