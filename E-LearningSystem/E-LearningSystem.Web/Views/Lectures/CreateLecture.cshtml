@using E_LearningSystem.Web.Models.Lecture
@model CreateLectureFormModel

 <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">
            <h2>Create Lecture</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->

<form method="post" enctype="multipart/form-data"
      asp-controller="Lectures" asp-action="CreateLecture">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Some Name">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Some Description"></textarea> 
    </div>

    <div class="mb-3">
        <label class="form-label">Resource URLs</label>
        <input type="file" name="files" class="form-control" multiple>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


